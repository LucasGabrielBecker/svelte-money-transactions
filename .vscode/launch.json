{
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "nodemon",
			"program": "${workspaceFolder}/app.js",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "nodemon",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		},
		{
			"command": "pnpm run test",
			"name": "Run tests",
			"request": "launch",
			"type": "node-terminal"
		}
	]
}
